<div class="row">
  <div class="large-12 columns title">
    <h2>Edit Error Log</h2>
  </div>
</div>

<%= form_for @errorlog, html: { multipart: true } do |f| %>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :description %>
      <%= f.text_area :description, size: "60x10",autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
      <%= f.label :os, "OS" %>
      <%= f.text_field :os, autofocus: true %>
    </div>
    <div class="large-6 columns">
      <%= f.label :os_version, "OS version" %>
      <%= f.text_field :os_version, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
      <%= f.label :language %>
      <%= f.text_field :language, autofocus: true %>
    </div>
    <div class="large-6 columns">
      <%= f.label :language_version %>
      <%= f.text_field :language_version, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
      <%= f.label :framework %>
      <%= f.text_field :framework, autofocus: true %>
    </div>
    <div class="large-6 columns">
      <%= f.label :framework_version %>
      <%= f.text_field :framework_version, autofocus: true %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.radio_button(:public, true) %>
      <%= label_tag(:public, "Public") %>
      <%= f.radio_button(:public, false) %>
      <%= label_tag(:public, "Private") %>
    </div>
  </div>

  <div class="row">
    <div class="field large-12 columns">
      <%= f.label :tag_list, "Tags (separated by commas)" %><br />
      <%= f.text_field :tag_list %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.submit "Update Error Log", class: "button red-button" %>
    </div>
  </div>
<% end %>
