<!-- Display WITH Image -->
<% if @errorlog.image_file_name != nil %>
	<div class="row">
		<div class="small-12 large-9 columns title">
			<h4><%= @errorlog.title %></h4>
		</div>
		<div class="small-12 large-9 columns panel">
			<%= image_tag @errorlog.image.url %>
		</div>
		<div class="small-3 columns panel desktop-only">
			<div class="err-info">
				<p>OS: <%= @errorlog.os %></p>
				<p>OS Version: <%= @errorlog.os_version %></p>
				<p>Language: <%= @errorlog.language %></p>
				<p>Language Version: <%= @errorlog.language_version %></p>
				<p>Framework: <%= @errorlog.framework %></p>
				<p>Framework Version: <%= @errorlog.framework_version %></p>
			  <p>
			  	<% @errorlog.tags.map(&:tag_name).map {|t| link_to t, tag_path(t)}.each do |t| %>
	        	<span class="[success alert secondary] label"><%= t %></span>
	        <% end %>
	      </p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="err-desc small-12 large-9 columns panel">
			<%= simple_format(@errorlog.description) %>
		</div>
	</div>
<% else %>
<!-- Display WITHOUT Image -->
	<div class="row">
		<div class="small-9 columns title">
			<h2><%= @errorlog.title %></h2>
		</div>
		<div class="err-desc small-9 columns panel">
			<%= simple_format(@errorlog.description) %>
		</div>
		<div class="small-3 columns panel desktop-only">
			<div class="err-info">
				<p>OS: <%= @errorlog.os %></p>
				<p>OS Version: <%= @errorlog.os_version %></p>
				<p>Language: <%= @errorlog.language %></p>
				<p>Language Version: <%= @errorlog.language_version %></p>
				<p>Framework: <%= @errorlog.framework %></p>
				<p>Framework Version: <%= @errorlog.framework_version %></p>
			  <p>
			  	<% @errorlog.tags.map(&:tag_name).map {|t| link_to t, tag_path(t)}.each do |t| %>
          	<span class="[success alert secondary] label"><%= t %></span>
          <% end %>
        </p>
			</div>
		</div>
	</div>
<% end %>

<% if @errorlog.user == current_user %>
	<div class="row">
		<div class="small-9 columns solution-button">
			<%= link_to "Edit error", edit_errorlog_path, class: "button [tiny] green-button" %>
			<%= link_to "Add Solution", new_errorlog_solution_path(@errorlog), class: "button [tiny] green-button" %>
		</div>
	</div>
<% end %>

<% @errorlog.solutions.each do |solution| %>
	<% if solution.worked == true %>
		<div class="row">
			<div class="small-12 large-9 columns panel callout worked-solution-desc">
				<%= simple_format(solution.description) %>
				<%= link_to "Edit Solution", edit_errorlog_solution_path(@errorlog, solution) %>
			</div>
		</div>
	<% else %>
		<div class="row">
			<div class="small-12 large-9 columns panel radius failed-solution-desc">
				<%= simple_format(solution.description) %>
				<%= link_to "Edit Solution", edit_errorlog_solution_path(@errorlog, solution) %>
			</div>
		</div>
	<% end %>
<% end %>





