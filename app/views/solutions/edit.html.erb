<h2>Add new attempted solution:</h2>

<%= form_for(@solution, url: errorlog_solution_path(@errorlog, @solution)) do |f| %>

  <div><%= f.label :description %><br />
  <%= f.text_area :description, size: "60x12",autofocus: true %></div>
<p>Worked?</p>
  <div>
    <%= f.radio_button(:worked, true) %>
    <%= label_tag(:worked, "Yes") %>
    <%= f.radio_button(:worked, false) %>
    <%= label_tag(:worked, "No") %>
  </div>

  <div><%= f.submit "Update Solution" %></div>
<% end %>