<p><%= current_user.firstname.capitalize %>'s Dashboard</p>

<div>
	<h3>Your Error Logs</h3>
	<% current_user.errorlogs.each do |errorlog|%>
	<%= link_to errorlog.title, errorlog_path(errorlog) %>
	<p>Tags: <%= raw errorlog.tags.map(&:tag_name).map {|t| link_to t, tag_path(t)}.join(', ') %></p>
	<% end %>
</div>

<%= link_to "Create new Error Log", new_errorlog_path %>